<a href="/users/<%= user.id %>">
  <div class='mb-4 flex gap-2 items-center border-2 border-pink-900 rounded-2xl overflow-hidden shadow'>
    <div class='m-3.5'>
      <% if user.photo_url.present? %>
        <%= image_tag user.photo_url, alt: "User Profile", width: "90px", height: "90px", class: "user_avatar" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", alt: "Default Avatar", width: "90px", height: "90px", class: "user_avatar" %>
      <% end %>
    </div>
    <div class='relative w-full'>
      <p class='text-3xl text-pink-900 font-bold'>
        <%= user.name %>
      </p>
      <span class='text-sm text-pink-500 absolute bottom-0 right-4'>
        Number of posts: <%= user.posts_counter %>
      </span>
    </div>
  </div>
</a>
