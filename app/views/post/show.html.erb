    
<div id = 'posts'>
  <div class="card text-center">
    <div class="card-header">
      <%= @post.title %>
      <p class="card-text"><small class="text-muted">Comments: <%= @post.comments_counter %></small></p>
      <p class="card-text"><small class="text-muted">Likes: <%= @post.likes_counter %></small></p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @post.text %></p>
    </div>
  </div>
  <% if @post.comments_counter == 0 %>
    <p>No comments for this post</p>
  <% else %>
    <div class="card">
      <ul class="list-group list-group-flush">
        <% comments.each do |comment|%>
          <li class="list-group-item"><%= comment.author.name %>: <%= comment.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
