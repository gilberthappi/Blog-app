<%= form_with model: [@user, @post], url:
user_posts_path(@user), method: :post do |form| %>
    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :text %>
        <%= form.text_area  :text %>
    </div>

    <div class="actions">
        <%= form.submit "Create Post" %>
    </div>
<% end %>