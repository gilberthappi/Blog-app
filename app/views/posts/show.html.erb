<div class="user-posts">
  <div class="post">
    <div class="title-cmt">  
        <h3><%= @post.title %></h3>
        <div>
            <span>Comments: <%= @post.comments_counter %></span>
            <span>Likes: <%= @post.likes_counter %></span>
        </div>
    </div>
    <p><%= @post.text %></p>
  </div>

  <div class="user-comments">
    <div class="comments">
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <div class="comment">
            <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
          </div>
        <% end %>
      <% else %>
        <p>No comments yet!</p>
      <% end %>
    </div>
  </div>
</div>